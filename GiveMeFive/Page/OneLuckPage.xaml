<UserControl x:Class="GiveMeFive.Page.OneLuckPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GiveMeFive.Page"
             xmlns:converter="clr-namespace:GiveMeFive.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1440">
    <UserControl.Resources>
        <converter:FontSizeConverter x:Key="FontSizeConverter"  />
        <converter:FontSizeConverterMini x:Key="FontSizeConverterMini"  />
    </UserControl.Resources>
    <Grid x:Name="gridMain" Background="#00000000">
        <Label x:Name="labelName" Content="Name" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay , Converter={StaticResource FontSizeConverter}}" Foreground="#FF1A2D27"/>
        <Label x:Name="labelLuckName" Content="LuckName"  FontSize="{Binding ActualHeight, ElementName=gridMain, Mode=OneWay , Converter={StaticResource FontSizeConverterMini}}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,20,0,0"/>

    </Grid>
</UserControl>
