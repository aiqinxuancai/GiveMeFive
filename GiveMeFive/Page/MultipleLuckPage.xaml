<UserControl x:Class="GiveMeFive.Page.MultipleLuckPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GiveMeFive.Page"
              xmlns:converter="clr-namespace:GiveMeFive.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1440">
    <UserControl.Resources>
        <converter:FontSizeConverter x:Key="FontSizeConverter"  />
        <converter:FontSizeConverterMini x:Key="FontSizeConverterMini"  />
    </UserControl.Resources>

    <Grid x:Name="gridMultipleLuck">
        <WrapPanel x:Name="stackPanelMultipleLuck" Orientation="Horizontal" Margin="160,100,160,100" HorizontalAlignment="Center">
            <Label Content="11111111" FontSize="26" />
            <Label Content="11111111" FontSize="26"/>
        </WrapPanel>
        <Label x:Name="labelLuckName" Content="LuckName"  FontSize="{Binding ActualHeight, ElementName=gridMultipleLuck, Mode=OneWay , Converter={StaticResource FontSizeConverterMini}}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,20,0,0"/>

    </Grid>

</UserControl>
